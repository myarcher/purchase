        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>
    <style name="line_1px_horizontal">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="line_15px_horizontal">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">@dimen/dimen_15px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="name_stytle">
        <item name="android:textColor">@color/name_color</item>
        <item name="android:textSize">@dimen/dimen_18px</item>
    </style>
    <style name="attr_stytle">
        <item name="android:textColor">@color/attr_color</item>
        <item name="android:textSize">@dimen/dimen_15px</item>
    </style>

    <style name="red_stytle">
        <item name="android:textColor">@color/red_color</item>
        <item name="android:textSize">@dimen/dimen_20px</item>
